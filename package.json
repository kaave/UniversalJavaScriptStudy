{
  "name": "UniversalReact",
  "version": "1.0.0",
  "main": "index.js",
  "repository": {},
  "license": "MIT",
  "scripts": {
    "postinstall": "flow-typed install && rimraf flow-typed/npm/browser-env_*",
    "start": "run-p check:watch start:client start:server",
    "start:client": "NODE_ENV=development webpack --config=webpack/client/index.js --progress --color -w",
    "start:server": "NODE_ENV=development run-s build:server server",
    "server": "node ./build/server.js",
    "prebuild": "yarn run check",
    "build": "NODE_ENV=production rimraf build/ && run-p build:client build:server",
    "build:client": "webpack --config=webpack/client/index.js --progress --color",
    "build:server": "webpack --config=webpack/server/index.js --progress --color",
    "build:check": "yarn run build && npm run server",
    "check": "run-p typecheck lint:scripts lint:styles",
    "check:watch": "gulp",
    "lint:scripts": "eslint --ext .js,.jsx source/",
    "lint:scripts:fix": "eslint --fix --ext .js,.jsx source/",
    "lint:styles": "stylelint 'source/**/*.scss'",
    "lint:styles:fix": "gulp stylefmt",
    "typecheck": "flow",
    "flow-typed": "flow-typed",
    "modulecheck": "rimraf node_modules && npm i && npm start"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "date-fns": "^1.28.5",
    "ejs": "^2.5.6",
    "express": "^4.15.3",
    "fetchr": "^0.5.37",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-helmet": "^5.1.3",
    "react-redux": "^5.0.5",
    "react-router": "^3.0.2",
    "redux": "^3.6.0",
    "redux-actions": "^2.0.3",
    "redux-logger": "^3.0.6",
    "redux-observable": "^0.14.1",
    "rxjs": "^5.4.1",
    "sanitize.css": "^5.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-date-fns": "^0.1.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.4",
    "css-mqpacker": "^6.0.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-ava": "^4.2.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-flowtype": "^2.30.4",
    "eslint-plugin-flowtype-errors": "^3.0.3",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "^2.1.2",
    "flow-bin": "^0.48.0",
    "flow-typed": "^2.1.2",
    "gulp": "^3.9.1",
    "gulp-eslint": "^3.0.1",
    "gulp-flowtype": "^1.0.0",
    "gulp-stylefmt": "^1.1.0",
    "gulp-stylelint": "^3.9.0",
    "http-server": "^0.10.0",
    "isomorphic-style-loader": "^2.0.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "postcss-flexbugs-fixes": "^3.0.0",
    "postcss-loader": "^2.0.6",
    "postcss-nth-child-fix": "^2.0.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "stylelint": "^7.11.1",
    "stylelint-config-sass-guidelines": "^2.1.0",
    "stylelint-scss": "^1.4.4",
    "uglifyjs-webpack-plugin": "^0.4.3",
    "webpack": "^2.6.1",
    "webpack-dev-middleware": "^1.10.2",
    "webpack-hot-middleware": "^2.17.0"
  }
}
