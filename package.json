{
  "name": "UniversalReact",
  "version": "1.0.0",
  "main": "index.js",
  "repository": {},
  "license": "MIT",
  "scripts": {
    "postinstall": "flow-typed install && rimraf flow-typed/npm/browser-env_*",
    "prestart_": "yarn run check",
    "start": "npm-run-all -p start:client start:server",
    "start:client": "NODE_ENV=development webpack --config=webpack/client/index.js --progress --color -w",
    "start:server": "NODE_ENV=development npm-run-all build:server server",
    "server": "node ./build/server.js",
    "prebuild": "yarn run check",
    "build": "NODE_ENV=production rimraf build/ && npm-run-all -p build:client build:server",
    "build:client": "webpack --config=webpack/client/index.js --progress --color",
    "build:server": "webpack --config=webpack/server/index.js --progress --color",
    "build:check": "yarn run build && npm run server",
    "check": "npm-run-all -p typecheck lint:scripts lint:styles",
    "lint:scripts": "eslint --ext .js,.jsx source/",
    "lint:scripts:fix": "eslint --fix --ext .js,.jsx source/",
    "lint:styles": "stylelint 'source/**/*.scss'",
    "typecheck": "flow",
    "flow-typed": "flow-typed",
    "modulecheck": "rimraf node_modules && npm i && npm start"
  },
  "dependencies": {
    "date-fns": "^1.28.2",
    "ejs": "^2.5.6",
    "express": "^4.15.2",
    "fetchr": "^0.5.37",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-helmet": "^5.0.3",
    "react-redux": "^5.0.3",
    "react-router": "^3.0.2",
    "redux": "^3.6.0",
    "redux-actions": "^2.0.1",
    "redux-logger": "^3.0.1",
    "redux-observable": "^0.14.1",
    "rxjs": "^5.3.0",
    "sanitize.css": "^5.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-loader": "^6.4.1",
    "babel-plugin-date-fns": "^0.1.0",
    "babel-preset-env": "^1.3.2",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.0",
    "css-mqpacker": "^5.0.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-ava": "^4.2.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-flowtype": "^2.30.4",
    "eslint-plugin-flowtype-errors": "^3.0.3",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "flow-bin": "^0.43.1",
    "flow-typed": "^2.0.0",
    "http-server": "^0.9.0",
    "isomorphic-style-loader": "^1.1.0",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "postcss-flexbugs-fixes": "^2.1.1",
    "postcss-loader": "^1.3.3",
    "postcss-nth-child-fix": "^1.0.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.16.1",
    "stylelint": "^7.10.1",
    "stylelint-config-sass-guidelines": "^2.1.0",
    "stylelint-scss": "^1.4.4",
    "uglifyjs-webpack-plugin": "^0.4.2",
    "webpack": "^2.3.3",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-hot-middleware": "^2.17.0"
  }
}
